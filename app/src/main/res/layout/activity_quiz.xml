<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 제목 -->
        <TextView
            android:id="@+id/tvQuestionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/8 컴활 퀴즈"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!-- 진행도 -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressQuiz"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:indeterminate="false"
            app:trackThickness="8dp"
            app:trackCornerRadius="8dp"
            app:indicatorColor="@color/brand_primary"
            app:trackColor="#EDEAF7" />

        <TextView
            android:id="@+id/tvProgressPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0%"
            android:textStyle="bold"
            android:textColor="@color/purple_200" />


        <!-- 문제 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/ivJudge"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/quit2" />

                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="함 퀴즈 조져보까"
                    android:textColor="#222222"
                    android:textSize="16sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- 보기 리스트 -->
        <LinearLayout
            android:id="@+id/choicesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/choice1"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#E5E5E5"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white"

                >

                <TextView
                    android:id="@+id/tvChoice1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="아따 1번일세 "
                    android:textColor="#222222"
                    android:textSize="16sp" />


            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/choice2"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#E5E5E5"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <TextView
                    android:id="@+id/tvChoice2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="아따 2번일세 "
                    android:textColor="#222222"
                    android:textSize="16sp" />

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/choice3"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#E5E5E5"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <TextView
                    android:id="@+id/tvChoice3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="아따 3번일세 "
                    android:textColor="#222222"
                    android:textSize="16sp" />

            </com.google.android.material.card.MaterialCardView>

            <!-- choice2/choice3 등은 필요 시 복제 -->
        </LinearLayout>

        <!-- 피드백 바 (초기 숨김) -->
        <LinearLayout
            android:id="@+id/feedbackBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="12dp"
            android:visibility="gone">


        </LinearLayout>
        <TextView
            android:id="@+id/explanationContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="풀이"
            android:textStyle="bold"
            android:textColor="@color/brand_primary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="정답은 B입니다. laundry는 세탁이라는 의미로…"
            android:textColor="@color/text_primary" />
        <TextView
            android:id="@+id/tvFeedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Great!"
            android:textStyle="bold"
            android:textColor="@color/brand_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="다음 문제"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/brand_primary"
            android:textColor="@android:color/white" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>